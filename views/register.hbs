<div class="col-md-6 m-auto mt-5">
  <div class="card card-body">
    <h1 class="text-center mt-3">Register</h1>
    <form action="/users/register" method="POST">
      <div class="form-group mb-3">
        <p>* 所有欄位皆為必填</p>
        <label for="name">Name</label>
        <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{ name }}">
      </div>
      <div class="form-group mb-3">
        <label for="email">Email
        </label>
        <input type="email" id="email" name="email" class="form-control" placeholder="e.g., example@mail.com"
          value="{{ email }}">
      </div>
      <div class="form-group mb-3">
        <label for="password">Password
        </label>
        <input type="password" id="password" name="password" class="form-control" placeholder="8 - 14 characters"
          value="{{ password }}">
      </div>
      <div class="form-group mb-3">
        <label for="confirmPassword">Confirm Password
        </label>
        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
          placeholder="Confirm Password" value="{{ confirmPassword }}">
      </div>
      <div class="d-grid gap-2 mt-3">
        <button type="submit" class="btn btn-primary btn-block">Register</button>
        <a href="/auth/facebook" class="btn btn-secondary btn-block">Facebook Login</a>
      </div>
    </form>
    <p class="lead mt-4">
      Have an Account? <a href="/users/login">Login</a>
    </p>
  </div>
</div>